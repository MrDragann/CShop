
@{
    ViewBag.Title = "Список заказов";
}

@section scripts{
<script src="~/Areas/Admin/assets/js/Form/Address/AddressModel.js"></script>
    <script src="~/Areas/Admin/assets/js/Form/Order/OrderHeaderModel.js"></script>
    <script src="~/Areas/Admin/assets/js/Form/Order/OrderFormModel.js"></script>
    <script>
        var params = {};
        params.UrlLoadItems = '@Url.Action("GetFilteredOrders","Order")';
        var FormModel = new Order.OrderFormModel(params);
    </script>
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet light bordered" data-bind="with:FormModel">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-settings font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">Список заказов</span>
                </div>
                @*<div class="actions" data-bind="with:Filter">
                    <div class="btn-group btn-group-devided">
                        <div class="input-group" style="width: 300px;">
                            <input data-bind="value:Term" type="text" class="form-control" />
                            <span class="input-group-btn">
                                <button data-bind="click:FormModel.TableRefresh" class="btn btn-success" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>*@
            </div>
            <div class="portlet-body" data-bind="with:Table">
                <div class="table-scrollable">
                    <table class="table table-hover table-light">
                        <thead>
                        <tr>
                            <th> # </th>
                            <th>Дата</th>
                            <th>Статус</th>
                            <th>Заказчик</th>
                            <th>Сумма</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody data-bind="foreach:Items">
                        <tr>
                            <td data-bind="text:Id"></td>
                            <td data-bind="text:DateCreate"></td>
                            <td data-bind="text:StatusName"></td>
                            <td data-bind="text:UserName"></td>
                            <td data-bind="text:Amount"></td>
                            <td>
                                <a data-bind="attr:{href:'@Url.Action("Details","Order")?orderId='+Id()}" class="fa fa-eye btn btn-sm blue"></a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <pagination data-bind="Component:Pagination"></pagination>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>


