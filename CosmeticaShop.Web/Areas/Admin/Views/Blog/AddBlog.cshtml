@model CosmeticaShop.IServices.Models.Blog.BlogModel
@{
    ViewBag.Title = (Model.Id == 0 ? "Добавление" : "Редактирование") + " поста в блоге";
}
@section scripts
{
}
@section breadcrumb
{
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="">CosmeticaShop</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Блог</span>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">@(Model.Id == 0 ? "Добавление" : "Редактирование")</span>
        </li>
    </ul>
}

<div class="row">
    <div class="col-md-12">

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <span class="caption-subject font-green sbold uppercase">@ViewBag.Title</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="tabbable-line">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#brand" data-toggle="tab">
                                Пост
                            </a>
                        </li>
                        <li>
                            <a href="#seo" data-toggle="tab">
                                Seo
                            </a>
                        </li>
                    </ul>
                    @using (Html.BeginForm("BlogPostUpdate", "Blog", new { Area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-body form-horizontal">
                            <div class="tab-content">
                                <input name="Id" type="hidden" value="@Model.Id">
                                <div class="tab-pane fade active in" id="brand">
                                    <div class="form-group form-md-line-input">
                                        <label class="col-md-2 control-label" for="Name">Наименование</label>
                                        <div class="col-md-10">
                                            <input maxlength="128" class="form-control input-lg" id="Title" name="Title" required="required" type="text" value="@Model.Title">
                                            <div class="form-control-focus">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group form-md-line-input">
                                        <label class="control-label col-md-2" for="Photo">Фото</label>
                                        <div class="col-md-8">
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 100%; height: 160px;">
                                                    @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                    {
                                <img src="@Model.PhotoUrl" />
}
                                                </div>
                                                <div>
                                                    <span class="btn blue btn-file">
                                                        <span class="fileinput-new">
                                                            Выберите изображение
                                                        </span>
                                                        <span class="fileinput-exists">
                                                            Изменить
                                                        </span>
                                                        <input type="file" id="PhotoFile" name="PhotoFile">
                                                    </span>
                                                    <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput">
                                                        Удалить
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group form-md-line-input">
                                        <label class="col-md-2 control-label" for="PreviewContent">Превью контент</label>
                                        <div class="col-md-10">
                                            <textarea class="form-control" id="PreviewContent" name="PreviewContent" rows="5">@Model.PreviewContent</textarea>
                                            <div class="form-control-focus">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-2" for="Content">Контент</label>
                                        <div class="col-md-10">
                                            <textarea class="form-control ckeditor" name="Content" id="Content">@Model.Content</textarea>
                                        </div>
                                    </div>

                                    <div class="form-group form-md-checkboxes">
                                        <label class="col-md-2 control-label">Видимость</label>
                                        <div class="col-md-10">
                                            <div class="md-checkbox">
                                                @Html.CheckBoxFor(x => x.IsActive, new { @class = "md-check", @id = "IsActive", Name = "IsActive" })
                                                <label for="IsActive">
                                                    <span class="inc"></span>
                                                    <span class="check"></span>
                                                    <span class="box"></span>
                                                    Отображать
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="seo">
                                    <div class="form-group form-md-line-input">
                                        <label class="col-md-2 control-label" for="SeoKeywords">Keywords</label>
                                        <div class="col-md-10">
                                            <textarea maxlength="256" class="form-control" id="SeoKeywords" name="SeoKeywords" rows="3" placeholder="">@Model.SeoKeywords</textarea>
                                            <div class="form-control-focus">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group form-md-line-input">
                                        <label class="col-md-2 control-label" for="SeoDescription">Description</label>
                                        <div class="col-md-10">
                                            <textarea maxlength="256" class="form-control" id="SeoDescription" name="SeoDescription" rows="3" placeholder="">@Model.SeoDescription</textarea>
                                            <div class="form-control-focus">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" id="save-changes" class="btn blue">Сохранить</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>