@model CosmeticaShop.IServices.Models.Order.OrderHeaderModel
@{
    ViewBag.Title = "OrderDetail";
}
<div class="col-md-12 white-container marginB-heigth-10">
    <div class="default-text navigation">
        <a href="@Url.Action("Index","Home")"> Principală </a> >
        <a href="@Url.Action("Index","Cabinet")"> <span class="pink-darkk-text">Profilul meu</span></a>
    </div>
</div>

<div class="col-md-3 white-container">

    <div class="block">
        <div class="content grey">
            <ul class="menu">
                <li>
                    <a href="@Url.Action("Index")"><span>Datele personale</span></a>
                </li>
                <li>
                    <a href="@Url.Action("HistoryOrders")"> <span class="active">@Resource.MyOrders</span></a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="col-md-9 white-container big history">

    <div class="date-order">
        @Resource.OrderDate: @Model.DateCreate.ToShortDateString()
    </div>
    <ul class="history-orders">
        <li>
            <div class="title col-md-12">
                <div class="col-md-6">
                    @Resource.Product
                </div>
                <div class="col-md-2">
                    @Resource.Price
                </div>
                <div class="col-md-2">
                    @Resource.Count
                </div>
                <div class="col-md-2">
                    @Resource.General
                </div>
            </div>
        </li>
        @foreach (var products in Model.OrderProducts)
        {
            <li>
                <div class="content detail col-md-12 ">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <a href="@Url.Action("Detail","Product", new {productKeyUrl = products.Product.KeyUrl})">
                                    <div class="col-md-3 image">
                                        <img src="@products.Product.PhotoUrl" />
                                    </div>
                                    <div class="col-md-9 name">
                                        @products.Product.Name
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-2">
                            @products.Price Lei
                        </div>
                        <div class="col-md-2">
                            @products.Quantity
                        </div>
                        <div class="col-md-2">
                            @products.Amount Lei
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>

    <div class="pull-right history-amount">
        <div class="row">
            <span class="">
                @Resource.TotalOrderAmount:
            </span>
            <span>
                @Model.Amount Lei
            </span>
        </div>
    </div>
    <div class="all-orders">
        <a href="@Url.Action("HistoryOrders")">
            <i class="icon-back"></i>&nbsp;@Resource.AllOrders
        </a>
    </div>
</div>