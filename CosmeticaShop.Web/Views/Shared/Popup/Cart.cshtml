
@{
    Layout = null;
}


<div id="cart-success" class="modal fade">
    <div class="modal-dialog pink-modal success cart">
        <div class="modal-content">
            <!-- Заголовок модального окна -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                Сoș
            </div>
            <!-- Основное содержимое модального окна -->
            <div class="modal-body">

                <label>Elementul a fost adăugat cu succes în coș</label>

            </div>
            <!-- Футер модального окна -->
            <div class="modal-footer">
                <div class="pull-left"><a data-dismiss="modal">Continuați cumpărăturile</a></div>
                <div class="pull-right"><a href="@Url.Action("Index","Cart")">Accesați coșul de cumpărături</a></div>
            </div>
        </div>
    </div>
</div>