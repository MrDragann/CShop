<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    @Html.Partial("~/Views/Shared/Partial/_Header.cshtml")
    <div class="container body-content wrap">
        @RenderBody()


    </div>

    @Html.Partial("~/Views/Shared/Partial/_Footer.cshtml")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    @RenderSection("Scripts", required: false)
    @Html.Partial("~/Views/Shared/Popup/Authorization.cshtml")
    <script>
        $("#dropdown-cart-head").mouseover(function () {
            $("#dropdown-cart").css("display", "block");
        });
        $("#dropdown-cart-head").mouseleave(function () {
            $("#dropdown-cart").css("display", "none");
        });


    </script>
</body>
</html>

