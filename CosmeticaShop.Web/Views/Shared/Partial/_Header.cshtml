                                      <div class="col-md-7 info" align="center">
                                          Total în coș
                                      </div>
                                      <div class="col-md-5 value" align="right">
                                          300 lei
                                      </div>
                                  </div>
                                  <div class="col-md-12 item-btn">
                                      <a href="@Url.Action("Index","Order")" class="btn-pink">
                                          Plasează comanda
